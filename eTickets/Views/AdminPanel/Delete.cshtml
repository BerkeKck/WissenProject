@model eTickets.Entities.Model.Concrete.Movie

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Sol: Film Posteri -->
                        <div class="col-md-4 text-center">
                            <img src="@($"/images/moviePhotos/{Model.PhotoUrl}")" class="img-fluid mb-3 rounded" alt="@Model.MovieName" />
                        </div>

                        <!-- Sağ: Film Bilgileri -->
                        <div class="col-md-8">
                            <h5 class="text-danger">@Model.MovieName</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Release Date:</dt>
                                <dd class="col-sm-8">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Duration:</dt>
                                <dd class="col-sm-8">@Model.Duration minutes</dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                            </dl>

                            <p class="text-danger font-weight-bold">Are you sure you want to delete this movie?</p>

                            <!-- Butonlar -->
                            <div class="d-flex justify-content-start">
                                <form asp-action="Delete" method="post" class="mr-2">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                                </form>
                                <a asp-action="MovieList" class="btn btn-secondary btn-lg ml-2">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>